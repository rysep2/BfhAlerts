<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_access_points"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rysep2.bfhalerts.AccessPointsActivity">


    <Button
        android:id="@+id/btnGetAccessPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Access Point"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />

    <TextView
        android:id="@+id/tvBSSID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BSSID"
        android:layout_below="@+id/btnGetAccessPoint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="85dp"
        android:textAlignment="center"/>


    <Button
        android:id="@+id/btnSetAccessPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Access Point"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnGetAccessPoint"
        android:layout_alignEnd="@+id/btnGetAccessPoint"
        android:layout_marginBottom="17dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="RolexgebÃ¤ude"
        android:ems="10"
        android:layout_below="@+id/tvBSSID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:id="@+id/etStandort" />


</RelativeLayout>
